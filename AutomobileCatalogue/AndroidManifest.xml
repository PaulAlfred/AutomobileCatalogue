<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AndroidProject.automobilecatalogue"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Manufacturers"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CarActivity"
            android:label="Cars" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ViewAddCategory"
            android:label="AddLabel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewAddCar"
            android:label="AddCar" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ViewAddManufacturer"
            android:label="AddManufacturer" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="Categories" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>